{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "no-multi-spaces": ["error"]
    }
}
