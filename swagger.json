{
    "openapi": "3.0.1",
    "info": {
      "title": "EasyAccont",
      "description": "Documentation from EasyAccount api",
      "version": "1.0.0"
    },
    "basePath": "/",
  
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
  
    "paths": {
        "/login": {
            "post": {
              "tags": ["Authentication"],
              "summary": "User login",
              "description": "Login de usuário com username e password. Controla tentativas de login e verifica se o usuário está ativo ou bloqueado para login.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário"
                        },
                        "password": {
                          "type": "string",
                          "description": "Senha do usuário"
                        }
                      },
                      "required": ["username", "password"],
                      "example": {
                        "username": "user@example.com",
                        "password": "password123"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "User logged successfully",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "token": {
                            "type": "string",
                            "description": "JWT token for the user"
                          }
                        }
                      }
                    }
                  }
                },
                "400": {
                  "description": "Bad request or too many login attempts"
                },
                "401": {
                  "description": "Unauthorized, user needs to confirm email or is blocked but can change password"
                },
                "403": {
                  "description": "Forbidden, invalid username or password"
                }
              }
            }
          },
          "/register": {
            "post": {
              "tags": ["Authentication"],
              "summary": "User registration",
              "description": "Registra um novo usuário com username, password e role. Envia um código de verificação por e-mail.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário"
                        },
                        "password": {
                          "type": "string",
                          "description": "Senha do usuário"
                        },
                        "role": {
                          "type": "string",
                          "description": "Função do usuário no sistema"
                        }
                      },
                      "required": ["username", "password", "role"],
                      "example": {
                        "username": "newuser@example.com",
                        "password": "password123",
                        "role": "user"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "User registered successfully, confirmation email sent"
                },
                "400": {
                  "description": "Bad request or email sending error"
                },
                "409": {
                  "description": "Conflict, email already exists"
                }
              }
            }
          },
          "/confirmemail": {
            "post": {
              "tags": ["Authentication"],
              "summary": "Confirm user's email",
              "description": "Confirma o e-mail do usuário utilizando um código de confirmação enviado previamente.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário"
                        },
                        "code": {
                          "type": "string",
                          "description": "Código de confirmação enviado por e-mail"
                        }
                      },
                      "required": ["username", "code"],
                      "example": {
                        "username": "user@example.com",
                        "code": "123456"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Email confirmed successfully!"
                },
                "400": {
                  "description": "Bad request or wrong code"
                }
              }
            }
          },
          "/user/recoverypass": {
            "post": {
              "tags": ["Authentication"],
              "summary": "User password recovery",
              "description": "Permite ao usuário alterar a senha caso tenha permissão para mudança de senha.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário"
                        },
                        "password": {
                          "type": "string",
                          "description": "Nova senha do usuário"
                        },
                        "confirmpassword": {
                          "type": "string",
                          "description": "Confirmação da nova senha do usuário"
                        }
                      },
                      "required": ["username", "password", "confirmpassword"],
                      "example": {
                        "username": "user@example.com",
                        "password": "newpassword123",
                        "confirmpassword": "newpassword123"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Password changed successfully"
                },
                "400": {
                  "description": "Passwords didn't match"
                },
                "401": {
                  "description": "Unauthorized, user not allowed to change password or user not found"
                }
              }
            }
          },
          "/passrecovery": {
            "post": {
              "tags": ["Authentication"],
              "summary": "Send password recovery email",
              "description": "Envia um email com o código de recuperação de senha para o usuário.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário para quem o email de recuperação será enviado"
                        }
                      },
                      "required": ["username"],
                      "example": {
                        "username": "user@example.com"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Recovery Pass Email sent"
                },
                "400": {
                  "description": "Email error or too many attempts"
                },
                "401": {
                  "description": "Email not found or not registered"
                }
              }
            }
          },
          "/confirmpassrecovery": {
            "post": {
              "tags": ["Authentication"],
              "summary": "Confirm password recovery code",
              "description": "Confirma o código de recuperação de senha e autoriza o usuário a mudar sua senha.",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "description": "Nome de usuário"
                        },
                        "code": {
                          "type": "string",
                          "description": "Código de recuperação recebido por email"
                        }
                      },
                      "required": ["username", "code"],
                      "example": {
                        "username": "user@example.com",
                        "code": "123456"
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Authorized to change password"
                },
                "401": {
                  "description": "Expired code or wrong code"
                },
                "400": {
                  "description": "Bad request or too many attempts"
                }
              }
            }
          },
          "/logout": {
            "get": {
              "tags": ["Authentication"],
              "summary": "User logout",
              "description": "Realiza o logout do usuário, invalidando sua chave pessoal.",
              "responses": {
                "200": {
                  "description": "Logged out successfully"
                },
                "401": {
                  "description": "Invalid username or password"
                },
                "400": {
                  "description": "Bad request"
                }
              }
            }
          },
          "/resendcode": {
            "get": {
              "tags": ["Authentication"],
              "summary": "Resend confirmation code",
              "description": "Reenvia o código de confirmação para o usuário não ativo.",
              "security": [{"bearerAuth": []}],
              "responses": {
                "200": {
                  "description": "Confirmation code resent successfully"
                },
                "400": {
                  "description": "Bad request, user already active or too many attempts"
                }
              }
            }
          }
    }
  }